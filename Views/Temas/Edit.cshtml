@using EFS_23298_23306.Data.Enum
@model EFS_23298_23306.Models.Temas

@{
    ViewData["Title"] = "Editar";
}

<div>
    <a class="fa fa-angles-left display-6 link-underline-opacity-0 link-secondary" style="float:left;text-decoration: none;" asp-action="Index"></a>

</div>


<h2 class="ms-5">Editar Tema <span style="color:mediumpurple"><strong>@Model.Nome</strong></span> </h2>

<br/>
<hr />
@if (ViewBag.ShowAlert == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Tema <strong>@Model.Nome</strong> guardado com sucesso!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (@ViewBag.TemaExistente != null && ViewBag.TemaExistente != Model.Nome)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        Erro! Tema <strong>@ViewBag.TemaExistente</strong> já existe!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <input type="hidden" asp-for="TemaID" />
    <div class="container-fluid mt-5 justify-content-center h-100 d-inline-block">
        <div class="row">
            <div class="col">

                <div class="form-group">
                    @Html.LabelFor(m => m.Nome, new { @class = "required" })
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TempoEstimado, new { @class = "required" })
                    <input asp-for="TempoEstimado" class="form-control" />
                    <span asp-validation-for="TempoEstimado" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="MinPessoas" class="control-label"></label>
                    <input min="1" max="10" asp-for="MinPessoas" class="form-control" />
                    <span asp-validation-for="MinPessoas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxPessoas" class="control-label"></label>
                    <input min="1" max="20" asp-for="MaxPessoas" class="form-control" />
                    <span asp-validation-for="MaxPessoas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Dificuldade, new { @class = "required" })
                    <select class="form-select" asp-for="Dificuldade" aria-label="Escolher dificuldade">
                        @foreach (var dif in Html.GetEnumSelectList<Dificuldade>())
                        {
                            <option value="@dif.Value">@dif.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Dificuldade" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="w-50 container-fluid justify-content-center text-center">
        <input asp-for="Foto" type="file"
               name="Imagem"
               accept=".png,.jpg,.jpeg"
               class="form-control" />
        <span class="text-danger" asp-validation-for="Foto"></span>
    </div>

    <div class="form-group text-center mt-lg-4  mx-auto">
        <a type="submit">
            @if (@ViewBag.TemaAntigo != null)
            {
                @Html.Hidden("NomeAntigo",(String) @ViewBag.TemaAntigo)
            }
           
            <button class="btn btn-primary btn-lg" ><i class="fa fa-floppy-disk me-2"></i>Guardar tema</button>
        </a>
    </div>
   


</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
