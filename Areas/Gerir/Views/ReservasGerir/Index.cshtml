       }
    @if (!dicCores.Any())
    {
            @:dictCores['0']="";
    }

       console.log(dictCores)

            $.get("/Gerir/ReservasGerir/Filter", { dictVals: dictVals, dic: dictCores, last: lastId, anfs: ($("#ListaAnfitrioes").val()).join(",") }, function (data, status) {

            $("#tabela").html(data)
                

           
              
