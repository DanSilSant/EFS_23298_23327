

<script>

    function getDifCor(num) {
        if (num == 0) {
            return "text-success";
        }
        if (num == 1) {
            return "text-warning";
        }
        if (num == 2) {
            return "text-danger";
        }
        if (num == 3) {
            return "text-secondary";
        }

    }

    $("#temas").addClass("active")
    $(document).ready(function () {
        
        $(document).ready(function () {
            var valueChanged=false;
            $('#temasIcon').on('input', function () {
                var classList = $('#icon').attr('class').split(' ');

                $.each(classList, function (i, v) {

                    if (v.startsWith("bi")) {
                        $("#icon").removeClass(v);
                        

                    };
                });
                console.log(getDifCor(("#dif").value))
                $("#icon").addClass(this.value);
                $("#icon").addClass(getDifCor(("#dif").value));

                


            });
        });


        $('#dif').on('change', function () {
            var classList = $('#dif').attr('class').split(' ');

            $.each(classList, function (i, v) {

                if (v.startsWith("text")) {
                    $("#dif").removeClass(v);
                    
                };
            });
            var classListIcon = $('#icon').attr('class').split(' ');

            $.each(classListIcon, function (i, v) {

                if (v.startsWith("text")) {
                    $("#icon").removeClass(v);
                };
            });
            
            var difColor = getDifCor(this.value)
                $("#icon").addClass(difColor);
            $("#dif").addClass(difColor);
           
            

        });
    });


</script>
