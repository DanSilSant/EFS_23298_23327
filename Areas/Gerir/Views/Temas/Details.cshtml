@model EFS_23298_23327.Models.Temas
@using EFS_23298_23327.Data

@{
    ViewData["Title"] = "Details";
}

<div class="mt-4">
    <a class="bi bi-arrow-left-circle-fill h2 me-5 text-info iconesConf" style="float:left;text-decoration: none;" asp-action="Index"></a>

</div>

<h2 class="ms-2  mt-4">Ver tema <span style="color:mediumpurple"><strong>@Model.Nome</strong></span> </h2>


<hr class="bg-primary " />
    <div class="container-fluid mt-5 justify-content-center h-100 d-inline-block">
        <div class="row">
            <div class="col">
                 
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome)
                    <input disabled="true" asp-for="Nome" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <p  class="text-white">@Model.Descricao</p>
                   
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TempoEstimado)
                    <input disabled="true" asp-for="TempoEstimado" class="form-control" />
                    
                </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Preco)
                <input disabled asp-for="Preco" class="form-control" />
            </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="MinPessoas" class="control-label"></label>
                    <input disabled="true" min="1" max="10" asp-for="MinPessoas" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label asp-for="MaxPessoas" class="control-label"></label>
                    <input disabled="true"  asp-for="MaxPessoas" class="form-control" />
                    
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Dificuldade)
                    <input disabled="true"  value="@Model.Dificuldade" class="form-control text-@DifficultiesValue.GetDifficultyColor((int)Model.Dificuldade)" />
                    
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Sala)
                    @if(Model.Sala != null){
                        <input disabled="true" value="@Model.Sala?.Numero" class="form-control" />

                    }else{
                    @:</br><span class="text-warning">Nenhuma sala associada</span>
                    }

                </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Icone)
                <div class="input-group">
               
                </br>
                    <input asp-for="Icone" disabled placeholder="bi bi-icon" class="form-control border-end-0 " id="temasIcon" />
                    <i class=" ms-2 @Model.Icone fa-2x"></i>
                    
                </div>
            </div>
            </div>
        </div>
        <a asp-route-id="@Model?.TemaId" asp-action="Edit">
        <button class="btn btn-primary position-absolute mt-lg-5" > <i class="fa fa-pencil me-2"></i>Editar tema</button>
        </a>
    </div>
   
    </a>
    <br/>
    <br />
    <div class="w-50 container-fluid justify-content-center text-center">
    @foreach (var foto in @Model.ListaFotos)
    {
        <a data-fancybox="gallery" data-caption="Imagem do tema '@Model.Nome'"
           href="~/Imagens/@foto.Nome">
            <img src="~/Imagens/@foto.Nome"
                 alt="Imagem do tema '@Model.Nome'"
                 title="Imagem do tema '@Model.Nome'"
                 class="rounded img-thumbnail expandeImagem" width="15%" />
        </a>
    }
    </div>
    <br/>


</div>
