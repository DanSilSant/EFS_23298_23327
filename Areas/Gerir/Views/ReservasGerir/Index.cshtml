        $('#Pendentes').select2({
            minimumResultsForSearch: -1,
            
        });
        $('#Pendentes').on('select2:select', function (e) {
          
            var el = $("#Pendentes")
          
            filter(el);
        });
        $('#Cancelada').select2({
            minimumResultsForSearch: -1,
        });
        $('#Cancelada').on('select2:select', function (e) {
            
            var el = $("#Cancelada")
          
